<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Cars.UpdateCarPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Aktualizuj samochód">
    
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Rejestracja:" FontSize="Medium" />
            <Entry Text="{Binding Plate, Mode=TwoWay}" FontSize="Medium"/>
            <Label Text="Marka:" FontSize="Medium" />
            <Editor Text="{Binding Brand, Mode=TwoWay}" 
                    AutoSize="TextChanges" FontSize="Medium" Margin="0"/>
            <Label Text="ID Klienta:" FontSize="Medium" />
            <Editor Text="{Binding ClientId, Mode=TwoWay}" 
                    AutoSize="TextChanges" FontSize="Medium" Margin="0"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Anuluj" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Zapisz" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>