<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Cars.CarDetailPage"
             xmlns:local="clr-namespace:Carceres_Android.ViewModels.Cars"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Aktualizuj" Command="{Binding Source={RelativeSource AncestorType=
                                {x:Type local:CarDetailViewModel}}, Path=UpdateCarCommand}"/>
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Rejestracja:" FontSize="Medium" />
        <Label Text="{Binding Plate}" FontSize="Small"/>
        <Label Text="Marka:" FontSize="Medium" />
        <Label Text="{Binding Brand}" FontSize="Small"/>
    </StackLayout>
</ContentPage>