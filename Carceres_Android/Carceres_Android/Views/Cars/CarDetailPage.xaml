<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Cars.CarDetailPage"
             xmlns:local="clr-namespace:Carceres_Android.ViewModels.Cars"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Plate, StringFormat='Rejestracja: {0}'}" FontSize="Medium"/>
        <Label Text="{Binding Brand, StringFormat='Marka: {0}'}" FontSize="Medium"/>
        <Label Text="{Binding ClientName, StringFormat='Klient: {0}'}" FontSize="Medium"/>
    </StackLayout>
</ContentPage>