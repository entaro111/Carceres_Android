<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Payments.PaymentDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Płatność:" FontSize="Medium" />
        <Label Text="{Binding PaidDate}" FontSize="Small"/>
        <Label Text="Wartość:" FontSize="Medium" />
        <Label Text="{Binding Value}" FontSize="Small"/>
    </StackLayout>
</ContentPage>