<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.AboutPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Center">
        <Image Source="logo_carceres.png" VerticalOptions="Center" Margin="0,80,0,60"/>
        <StackLayout>
            <Label Text="Carceres" TextColor="Black" FontSize="50" HorizontalOptions="Center"/>
            <Label Text="System zarządzania parkingiem strzeżonym" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="Greeting" Text="{Binding Greeting}" HorizontalOptions="Center" FontSize="30" TextColor="Black" Margin="0,30,0,0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
