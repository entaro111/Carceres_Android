<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Users.UserDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Username:" FontSize="Medium" />
        <Label Text="{Binding username}" FontSize="Small"/>
        <Label Text="User Type:" FontSize="Medium" />
        <Label Text="{Binding user_type}" FontSize="Small"/>
    </StackLayout>
</ContentPage>