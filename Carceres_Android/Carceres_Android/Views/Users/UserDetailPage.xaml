<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carceres_Android.Views.Users.UserDetailPage"
             Title="{Binding Title}">


    <StackLayout Spacing="20" Padding="15">
        <Label Text="Stare hasło:" FontSize="Medium" />
        <Entry Text="{Binding OldPassword}" FontSize="Small" IsPassword="True"/>
        <Label Text="Nowe hasło:" FontSize="Medium" />
        <Entry Text="{Binding NewPassword}" FontSize="Small" IsPassword="True"/>
        <Label Text="Powtórz nowe hasło:" FontSize="Medium" />
        <Entry Text="{Binding RetypedNewPassword}" FontSize="Small" IsPassword="True"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Zapisz" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>